{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "src",
    "skipLibCheck": true,
    "strict": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
